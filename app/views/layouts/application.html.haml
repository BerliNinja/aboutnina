!!!
%html
  %head
    %title [aboutnina]
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Ubuntu:400,700", :rel => "stylesheet", :type => "text/css"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %script{:src => "js/jquery-1.11.0.min.js"}
    = favicon_link_tag '/img/favicon.ico'
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand.green{:href => "root_path"} [aboutnina]
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.current
              = link_to ('Home'), root_path
            %li
              %a{:href => "#information"} Work and Education
            %li
              %a{:href => "#experience"} Experience
            %li
              %a{:href => "#skills"} Skills
            %li
              %a{:href => "#statement"} Personal Statement
            %li
              = link_to ('Questions'), questions_path
            %li
              = link_to ('Posts'), posts_path
            / %li
            /   %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            /     Travelling and Exchange
            /     %span.caret
            /   %ul.dropdown-menu{:role => "menu"}
            /     %li
            /       = link_to t('Travelled To'), travel_path
            /     %li
            /       = link_to t('Exchange Experience'), exchanges_path
            / %li.dropdown
            /   %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            /     Hobbies and Volunteering
            /     %span.caret
            /   %ul.dropdown-menu{:role => "menu"}
            /     %li
            /       = link_to t('Hobbies'), hobbies_path
            /     %li
            /       = link_to t('Volunteering'), volunteer_path

          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to t('Contact'), me_path
            %li
              = link_to t('Imprint'), imprint_path
            %li
              - if user_signed_in?
                = link_to 'Log out', destroy_user_session_path, method: :delete

.container
  = yield
  = flash[:notice] || flash[:message]
  .container
    - flash.each do |name, msg|
      - if msg.is_a?(String)
        %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
          %a.close{"data-dismiss" => "alert"}
            &times;
          = content_tag :div, msg, :id => "flash_#{name}"
  %footer
    .navbar.navbar-inverse.navbar-fixed-bottom
      .container
        %p.navbar-text.lefter Site Built By Nina
        %p.navbar-text.pull-right
          %a{:href => "https://github.com/BerliNinja", target: :blank } Link To GitHub

