!!!
%html
  %head
    %title [aboutnina]
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    %link{:href => "css/lightbox.css", :rel => "stylesheet"}/
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    %script{:src => "js/jquery-1.11.0.min.js"}
    %script{:src => "js/lightbox.min.js"}

  /   =yield

  /   %script{:src => "/js/bootstrap.js"}

  %body
    %nav.navbar.navbar-inverse{:role => "navigation"}
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"} [aboutnina]
        / Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{:href => "#"} Home
            %li
              %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                Curriculum Vitae
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li
                  = link_to t('Personal Information'), personal_path
                %li
                  = link_to t('Work Experience'), work_path
                %li
                  = link_to t('Education'), education_path
                %li
                  = link_to t('Skills'), skills_path
                / %li.divider
                / %li
                /   = link_to ('Funktionen'), me_path
            %li
              = link_to ('My Code'), mycode_path
            %li
              %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                Travelling and Exchange
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li
                  = link_to t('Travelled To'), travel_path
                %li
                  = link_to t('Exchange Experience'), exchange_path
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                Hobbies and Volunteering
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li
                  = link_to t('Hobbies'), hobbies_path
                %li
                  = link_to t('Volunteering'), volunteer_path

          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to t('Contact'), me_path
            %li
              = link_to t('Sitemap'), me_path
            %li
              = link_to 'Log out', destroy_user_session_path, method: :delete

      /.container-fluid

    = yield
    = flash[:notice] || flash[:message]
    .container
      - flash.each do |name, msg|
        - if msg.is_a?(String)
          %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
            %a.close{"data-dismiss" => "alert"}
              &times;
            = content_tag :div, msg, :id => "flash_#{name}"
    %footer
      .navbar.navbar-inverse.navbar-fixed-bottom
        .container
          %p.navbar-text Site Built By Nina
          %a.navbar-btn.btn-danger.btn.pull-right{:href => "/"} Checke meinen Blog aus


